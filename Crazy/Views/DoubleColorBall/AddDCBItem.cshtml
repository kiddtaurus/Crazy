
@{
    ViewBag.Title = "AddDCBItem";
}

<h2>AddDCBItem</h2>
<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Content/js/bootstrap.min.js"></script>
<script src="~/Scripts/angularjs.js"></script>
<script src='javascripts/angular.js' type="text/javascript"></script>
<!--<script src="~/Scripts/DoubleColorBall/AddDCBItem.js"/>-->
<script>
    var 
    item = {
        "R1": "01",
        "R2": "06",
        "R3": "11",
        "R4": "17",
        "R5": "24",
        "R6": "31",
        "B1": "14"
        }
    function PhoneListCtrl($scope) {
        $scope.phones = [
            {
                "name": "Nexus S",
                "snippet": "Fast just got faster with Nexus S.",
                "age": 0
            },
            {
                "name": "Motorola XOOM™ with Wi-Fi",
                "snippet": "The Next, Next Generation tablet.",
                "age": 1
            },
            {
                "name": "MOTOROLA XOOM™",
                "snippet": "The Next, Next Generation tablet.",
                "age": 2
            }
        ];

        $scope.orderProp = 'age';
    } 
    PhoneListCtrl(this);

    var scope = new Scope();
</script>{item.R1}
<table>
    <thead>
        <tr>
            <td>红1</td>
            <td>红2</td>
            <td>红3</td>
            <td>红4</td>
            <td>红5</td>
            <td>红6</td>
            <td>蓝1</td>
        </tr>
    </thead>
    <tr>
        <td><input [(ngModel)]="item.R1" />{item.R1}</td>
        <td><input ng-bind="item.R2" /></td>
        <td><input ng-bind="item.R3" /></td>
        <td><input ng-bind="item.R4" /></td>
        <td><input ng-bind="item.R5" /></td>
        <td><input ng-bind="item.R6" /></td>
        <td><input ng-bind="item.B1" /></td>
    </tr>
</table>
<ul class="phones">
    <li ng-repeat="phone in phones | filter:query | orderBy:orderProp">
        {{phone.name}}
        <p>{{phone.snippet}}</p>
    </li>
</ul>
